# Development Dockerfile for Node.js backend with hot reloading

FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install curl for health checks and nodemon for hot reloading
RUN apk add --no-cache curl

# Create non-root user for security
RUN addgroup -g 1001 -S nodejs && \
    adduser -S backend -u 1001

# Copy package files
COPY package*.json ./

# Install all dependencies (including devDependencies for development)
RUN npm ci

# Install nodemon globally for hot reloading
RUN npm install -g nodemon ts-node

# Create uploads directory and set permissions
RUN mkdir -p uploads/kyc uploads/materials && \
    chown -R backend:nodejs /app

# Switch to non-root user
USER backend

# Copy source code (this will be overridden by volume mounts in development)
COPY --chown=backend:nodejs . .

# Expose port
EXPOSE 3004

# Start development server with hot reloading
CMD ["npm", "run", "dev"]