# Backend Environment Variables Template for Development
# Copy this file to .env and fill in the values

# Server Configuration
PORT=3004
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:3002

# Backend Configuration
BACKEND_URL=http://localhost:3004

# Database Configuration (Docker Compose)
MONGODB_URI=mongodb://app_user:dev-app-password@mongodb:27017/financial-affiliate-platform-dev?authSource=financial-affiliate-platform-dev

# Redis Configuration (Docker Compose)
REDIS_URL=redis://:dev-redis-password@redis:6379

# JWT Configuration
JWT_SECRET=dev-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Logging
LOG_LEVEL=debug

# Rate Limiting (relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Security
BCRYPT_ROUNDS=10

# Email Configuration (development)
EMAIL_USER=dev@example.com
EMAIL_PASSWORD=dev-password
EMAIL_FROM=Partner IQ Dev <dev@example.com>

# PayPal Configuration (sandbox)
PAYPAL_CLIENT_ID=your-paypal-sandbox-client-id
PAYPAL_CLIENT_SECRET=your-paypal-sandbox-client-secret
PAYPAL_MODE=sandbox

# Stripe Configuration (test)
STRIPE_SECRET_KEY=sk_test_your-stripe-test-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-test-publishable-key

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads